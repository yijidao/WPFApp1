<Window x:Class="Tools.ControlTempleteViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tools"
        mc:Ignorable="d"
        Title="ControlTempleteViewer" Height="450" Width="800"
        Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TreeView x:Name="dllListView" SelectedItemChanged="dllListView_SelectedItemChanged"></TreeView>
        <Grid Grid.Row="1" Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="ctlListView" SelectionChanged="ctlListView_SelectionChanged"/>
            <GridSplitter Grid.Column="1"></GridSplitter>
            <TextBlock TextWrapping="Wrap" Grid.Column="2" x:Name="txtBlock"></TextBlock>
        </Grid>
    </Grid>
</Window>
