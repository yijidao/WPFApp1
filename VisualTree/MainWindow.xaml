<Window x:Class="VisualTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualTree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        x:Name="mainWindow">
    <Grid>
        <StackPanel>
            <Button Padding="5" Margin="5" Click="Button_Click">First Button</Button>
            <Button Padding="5" Margin="5" Click="Button_Click">Second Button</Button>
        </StackPanel>
    </Grid>
</Window>
